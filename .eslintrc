env:
  es6: true
  node: true
  browser: true

parserOptions:
  ecmaVersion: 6
  sourceType: module
  ecmaFeatures:
    jsx: true
    experimentalObjectRestSpread: true

rules:
  no-new: off
  no-var:
    - error
  no-unused-vars:
    - error
    - vars: all
      args: none
  indent:
    - error
    - 2
  quotes:
    - error
    - single
  linebreak-style:
    - error
    - unix
  semi:
    - error
    - never
  comma-dangle:
    - error
    - always-multiline
